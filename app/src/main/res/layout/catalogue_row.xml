<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/row_coupon"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="5dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:background="#f2f2f2"
        android:layout_margin="0dp"
        android:paddingBottom="12dp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="12dp"
            android:id="@+id/upper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            >

            <ImageView
                android:id="@+id/coupon_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY" />

            <RelativeLayout
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_alignParentRight="true"
                android:layout_margin="12dp">

                <ImageView
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:background="@drawable/round"

                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ph.com.jeffreyvcabrera.iamiloilorecode.utils.CustomTextView
                        android:id="@+id/discount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/app_white"
                        android:textSize="20sp"
                        app:type="HelveticaLight" />

                    <ph.com.jeffreyvcabrera.iamiloilorecode.utils.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="off"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        app:type="HelveticaLight" />
                </LinearLayout>

            </RelativeLayout>

        </RelativeLayout>

        <ph.com.jeffreyvcabrera.iamiloilorecode.utils.CustomTextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/upper"
            android:paddingLeft="20dp"
            android:paddingTop="5dp"
            android:text="test"
            android:textColor="@color/app_black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:type="AntonioRegular" />

        <ph.com.jeffreyvcabrera.iamiloilorecode.utils.CustomTextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_marginTop="3dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="test"
            android:textColor="@color/app_black"
            android:textSize="@dimen/normal_font"
            app:type="HelveticaLight" />

        <ph.com.jeffreyvcabrera.iamiloilorecode.utils.CustomTextView
            android:id="@+id/coupon_date_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/description"
            android:layout_marginTop="5dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Promo Until: Dec 12, 2013"
            android:textColor="@color/app_black"
            android:textSize="@dimen/normal_font"
            app:type="HelveticaLight" />

        <ph.com.jeffreyvcabrera.iamiloilorecode.utils.CustomTextView
            android:id="@+id/coupon_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/coupon_date_end"
            android:paddingLeft="20dp"
            android:text="Coupons Left: 20"
            android:textColor="@color/app_black"
            android:textSize="@dimen/normal_font"
            app:type="HelveticaLight" />

        <Button
            android:id="@+id/buy_now"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/upper"
            android:layout_marginEnd="18dp"
            android:layout_marginRight="18dp"
            android:background="@color/top_bar"
            android:padding="0dp"
            android:text="Buy Now"
            android:textColor="@color/white" />
    </RelativeLayout>

</RelativeLayout>