<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/row_coupon"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="5dp">

    <RelativeLayout
    android:layout_width="wrap_content"
    android:background="#f2f2f2"
    android:layout_margin="0dp"
    android:paddingBottom="12dp"
    android:layout_height="wrap_content">

    <ph.com.jeffreyvcabrera.iamiloilorecode.utils.CustomTextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/coupon_image"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:text="Order Name"
        android:textColor="@color/app_black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:type="AntonioRegular"/>

    <ph.com.jeffreyvcabrera.iamiloilorecode.utils.CustomTextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/coupon_image"
        android:layout_below="@+id/name"
        android:paddingLeft="20dp"
        android:text="Short Description"
        android:textColor="@color/app_black"
        android:textSize="14sp"
        app:type="HelveticaLight" />

    <ph.com.jeffreyvcabrera.iamiloilorecode.utils.CustomTextView
        android:id="@+id/price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/coupon_image"
        android:layout_below="@+id/description"
        android:paddingLeft="20dp"
        android:text="Price"
        android:textColor="@color/app_black"
        android:textSize="12sp"
        app:type="HelveticaLight"/>

    <ph.com.jeffreyvcabrera.iamiloilorecode.utils.CustomTextView
        android:id="@+id/order_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/coupon_image"
        android:layout_below="@+id/price"
        android:paddingLeft="20dp"
        android:text="Order Count"
        android:textColor="@color/app_black"
        android:textSize="12sp"
        app:type="HelveticaLight"/>

    <ph.com.jeffreyvcabrera.iamiloilorecode.utils.CustomTextView
        android:id="@+id/status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/coupon_image"
        android:layout_below="@+id/order_count"
        android:paddingLeft="20dp"
        android:text="Order Status"
        android:textColor="@color/app_black"
        android:textSize="12sp"
        app:type="HelveticaLight"/>

    <ImageView
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:scaleType="fitXY"
        android:id="@+id/coupon_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@mipmap/app_icon"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    </RelativeLayout>
</RelativeLayout>